<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="com.arjhox.develop.domain.common.LoadingState" />

        <variable
            name="viewModel"
            type="com.arjhox.develop.playrequest.ui.main.play.PlayViewModel" />

        <variable
            name="requestTypeAdapter"
            type="com.arjhox.develop.playrequest.ui.main.play.adapters.SimpleSpinnerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.play.PlayFragment">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/appCompatSpinnerRequestType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:itemSelected="@{viewModel.requestTypeSelectedObserver}"
            app:bindAdapter="@{requestTypeAdapter}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textInputEditTextRequestPath"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextRequestPath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:inputType="text"
            android:singleLine="true"
            android:hint="@string/hint_write_request"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/appCompatSpinnerRequestType"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewRequestResponse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.requestResult.response}"
            show="@{viewModel.loading}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Request response"
            tools:visibility="gone"/>

        <include
            android:id="@+id/layoutHeaders"
            layout="@layout/layout_headers_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:viewModel="@{viewModel}"
            app:layout_constraintTop_toBottomOf="@id/textInputEditTextRequestPath"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <include
            android:id="@+id/layoutParameters"
            layout="@layout/layout_parameters_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:viewModel="@{viewModel}"
            app:layout_constraintTop_toBottomOf="@id/layoutHeaders"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonPlayAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_play"
            android:text="@string/button_text_play_request"
            android:onClick="@{() -> viewModel.playRequest(viewModel.requestPath)}"
            android:theme="@style/AppTheme"
            show="@{viewModel.requestPath}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>