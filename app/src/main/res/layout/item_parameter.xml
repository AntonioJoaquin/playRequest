<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>

        <variable
            name="parameter"
            type="com.arjhox.develop.playrequest.ui.common.models.Parameter" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="parameterListener"
            type="com.arjhox.develop.playrequest.ui.main.play.parameter.ParameterListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/appCompatImageViewRemoveParameter"
            android:onClick="@{() -> parameterListener.onClick(parameter, position)}">

            <TextView
                android:id="@+id/textViewParameterKey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{parameter.key}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Parameter Key"/>

            <TextView
                android:id="@+id/textViewParameterValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{parameter.value}"
                android:ellipsize="end"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/textViewParameterKey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Parameter Value"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageViewRemoveParameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_delete"
            android:tint="@android:color/black"
            android:onClick="@{() -> parameterListener.onDelete(parameter)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>