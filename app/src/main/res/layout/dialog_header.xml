<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.arjhox.develop.playrequest.ui.main.play.header.HeaderDialogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/appCompatSpinnerHeaderKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:entries="@{viewModel.headers}"
            app:itemSelected="@{viewModel.headerKeySelectedObserver}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutHeaderValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Header value"
            app:showInputError="@{viewModel.value}"
            app:layout_constraintTop_toBottomOf="@id/appCompatSpinnerHeaderKey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextHeaderValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.headerModel.value}"
                app:enteredText="@{viewModel.headerValueEnterObserver}" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="OK"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:onClick="@{() -> viewModel.onConfirmHeader(viewModel.value)}"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutHeaderValue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>