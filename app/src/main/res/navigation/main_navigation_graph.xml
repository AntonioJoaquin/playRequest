<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/playFragment">

    <fragment
        android:id="@+id/playFragment"
        android:name="com.arjhox.develop.playrequest.ui.main.play.PlayFragment"
        android:label="@string/play_fragment_label"
        tools:layout="@layout/fragment_play" >

        <action
            android:id="@+id/openHeaderDialogAction"
            app:destination="@id/headerDialog"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/headerDialog" />

        <action
            android:id="@+id/openParameterDialogAction"
            app:destination="@id/parameterDialog"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/parameterDialog" />

        <action
            android:id="@+id/goToResultFragmentAction"
            app:destination="@id/resultFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <dialog
        android:id="@+id/headerDialog"
        android:name="com.arjhox.develop.playrequest.ui.main.play.header.HeaderDialog"
        android:label="header_dialog"
        tools:layout="@layout/dialog_header">

        <argument
            android:name="header"
            app:argType="com.arjhox.develop.playrequest.ui.common.models.HeaderModel" />
    </dialog>

    <dialog
        android:id="@+id/parameterDialog"
        android:name="com.arjhox.develop.playrequest.ui.main.play.parameter.ParameterDialog"
        android:label="parameter_dialog"
        tools:layout="@layout/dialog_parameter" >

        <argument
            android:name="parameter"
            app:argType="com.arjhox.develop.playrequest.ui.common.models.ParameterModel" />
    </dialog>


    <fragment
        android:id="@+id/resultFragment"
        android:name="com.arjhox.develop.playrequest.ui.result.view.ResultFragment"
        android:label="@string/result_fragment_label"
        tools:layout="@layout/fragment_result">

        <argument
            android:name="response"
            app:argType="com.arjhox.develop.playrequest.ui.common.models.RequestResponse"/>
    </fragment>
</navigation>